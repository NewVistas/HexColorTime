<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="Appearance">

        <ListPreference
            android:key="textType"
            android:title="Text appearance"
            android:summary="Change text appearance"
            android:defaultValue="1"
            android:entries="@array/textTypes"
            android:entryValues="@array/textTypeValues" />

        <ListPreference
            android:key="textTypeface"
            android:title="Change typography"
            android:summary="Change time text typography"
            android:defaultValue="1"
            android:entries="@array/textTypefaces"
            android:entryValues="@array/textTypefacesValues"/>

        <com.eneko.hexcolortimewallpaper.TextSizePreference
            android:title="Text Size"
            android:summary="Select time text size"/>

        <SwitchPreference
            android:key="invertColor"
            android:title="Invert Colors"
            android:summary="Invert background color"
            android:defaultValue="false"/>

        <Preference
            android:key="applyWallpaper"
            android:title="Apply!"
            android:summary="Apply the Wallpaper"/>

    </PreferenceCategory>

</PreferenceScreen>